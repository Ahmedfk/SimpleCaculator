<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd903"
    android:paddingBottom="16dp"
    tools:context="com.example.ahmedfareed.simplecaculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:layout_height="207dp"
        android:text="0"
        android:layout_margin="0dp"
        android:background="#ffffff"
        android:gravity="bottom|right"
        android:textSize="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:nestedScrollingEnabled="false"
        android:maxLines="2"
        android:maxLength="17"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="7"
        android:layout_below="@+id/textView"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>


    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_below="@+id/textView"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="9"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="4"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="5"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="6"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="1"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="2"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="3"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btnC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@id/btn2"
        android:layout_toStartOf="@+id/btn2"
        android:background="@color/back"
        android:maxWidth="90dp"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="#ffb1b1"
        android:textSize="50dp" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="0"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btnC"
        android:layout_toEndOf="@+id/btnC"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/back"
        android:textSize="50dp"
        android:textColor="#ffb1b1"
        android:text="="
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:maxWidth="90dp"
        android:onClick="onClickEqual"/>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:background="@color/back"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#ffb1b1"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnSub"
        android:layout_toEndOf="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:background="@color/back"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="#ffb1b1"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnDev"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:background="@color/back"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="รท"
        android:textColor="#ffb1b1"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnDev"
        android:layout_toEndOf="@+id/btnEqual"
        android:layout_toRightOf="@+id/btnEqual"
        android:background="@color/back"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="x"
        android:textColor="#ffb1b1"
        android:textSize="50dp" />

</RelativeLayout>